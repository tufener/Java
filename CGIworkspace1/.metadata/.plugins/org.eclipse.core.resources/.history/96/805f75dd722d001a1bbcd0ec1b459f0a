package projetTableau;

public class PorjetTableau {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		testafficheTab();

	}

	static void testIntv1() {
		int[] tab = new int[3];
		System.out.println(tab[0]);
		tab[0] = 10;
		System.out.println(tab[0]);

	}

	static void testIntv2() {
		int[] tab = new int[3];
		tab[0] = 10;
		tab[2] = 100;
		for (int i = 0; i < tab.length; i++) // tab.length permet de déterminer
												// automatiquement la taille du
												// tableau = pas besoin de
												// manipuler des chiffres en dur
			System.out.println(tab[i]);

	}

	static void testIntv3() {
		// int[] tab = new int[3];
		// tab[0] = 10;
		// tab[1] = 50;
		// tab[2] = 100;
		int[] tab = { 1, 10, 100 };

		for (int i = 0; i < tab.length; i++) // tab.length permet de déterminer
												// automatiquement la taille du
												// tableau = pas besoin de
												// manipuler des chiffres en dur
			System.out.println(tab[i]);

	}

	static void testIntv4() {

		int[] tab = { 1, 10, 100 };
		for (int e : tab)
			System.out.println(e);

		/*
		 * for (int i = 0; i < tab.length; i++) System.out.println(tab[i]);
		 */

	}

	static void testStringv1() {
		String[] tab = { "aa", "bb", null, "cc" };

		for (int i = 0; i < tab.length; i++)
			if (tab[i] != null)
				System.out.println(tab[i].toUpperCase()); // tab.length permet
															// de déterminer
															// automatiquement
															// la taille du
															// tableau = pas
															// besoin de
															// manipuler des
															// chiffres en dur

	}

	static void afficheTab() {
		int[] tab1 = { 1, 4, 8, 9, 7 };
		int[] tab2 = { 41, 14, 28, 59, 67 };
		for (int e : tab1)
			System.out.println(e + "\t");
		System.out.println();
		for (int e : tab2)
			System.out.println(e + "\t");

	}

	static void testafficheTab(int[] x) { // on a donné dans les paramètres les
											// éléments concernant notre tableau
											// ce qui va nous permettre de
											// diminuer des lignes de codes dans
											// la méthode juste au-dessus
		for (int e : x)
			System.out.println(e + "\t");
		System.out.println();

	}

	static void testafficheTab(String[] x) { // on a donné dans les paramètres
												// les
		// éléments concernant notre tableau
		// ce qui va nous permettre de
		// diminuer des lignes de codes dans
		// la méthode juste au-dessus
		for (String e : x)
			System.out.println(e + "\t");
		System.out.println();

	}

}
